<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:textColor">@color/primaryLabel</item>
    </style>

    <style name="AppTheme.Label.Primary">
        <item name="android:textSize">@dimen/primary_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Label.Bigger">
        <item name="android:textSize">@dimen/bigger_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button.Borderless.Uncapitalize" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.Borderless.Pink" parent="@style/AppTheme.Button.Borderless.Uncapitalize">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button</item>
    </style>

</resources>
